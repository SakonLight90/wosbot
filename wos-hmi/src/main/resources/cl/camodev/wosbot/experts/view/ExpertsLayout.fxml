<GridPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" percentHeight="25.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" percentHeight="25.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" percentHeight="25.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" percentHeight="25.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <CheckBox fx:id="claimIntelCheckBox" text="Claim new Intel from Agnes" GridPane.rowIndex="0">
            <GridPane.margin>
                <Insets left="10.0" />
            </GridPane.margin>
        </CheckBox>
        <CheckBox fx:id="claimLoyaltyTagCheckBox" text="Claim free loyalty tag from Romulus" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="10.0" />
            </GridPane.margin>
        </CheckBox>
        <CheckBox fx:id="claimTroopsCheckBox" text="Claim free troops from Romulus" GridPane.rowIndex="2">
            <GridPane.margin>
                <Insets left="10.0" />
            </GridPane.margin>
        </CheckBox>
        <VBox fx:id="troopOptionsVBox" alignment="CENTER_LEFT" spacing="5.0" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <children>
                <ComboBox fx:id="troopTypeComboBox" prefWidth="150.0" />
            </children>
        </VBox>
    </children>
</GridPane>
